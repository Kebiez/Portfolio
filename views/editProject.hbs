{{#if isLoggedIn}}
<div id="content">
    {{#if validationErrors.length}}
    {{#each validationErrors}}
    <p>{{this}}</p>
    {{/each}}
    {{/if}}
    <form action="/projectPost/{{projectposts.id}}/editProject" method="POST">
        <label>Title</label><br>
        <input type="text" name="title" placeholder={{projectposts.title}}><br>
        <label>Description</label><br>
        <input type="text" name="description" placeholder={{projectposts.description}}><br>
        <label>Main content</label><br>
        <input type="text" name="mainContent" placeholder={{projectposts.mainContent}}><br>
        <input type="hidden" name="_csrf" value={{csrfToken}}>
        <input type="submit" value="Save">
    </form>
</div>
{{else}}
<div>
    <h2>You're not logged in!</h2>
    <p>Please log in to proceed</p>
</div>
{{/if}}